<Window x:Class="WpfApp2.view.WinAddItemInventory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2.view"
        mc:Ignorable="d"
        Title="WinAddItemInventory" Height="300" Width="250">
    <StackPanel>
        <StackPanel Margin="5" Orientation="Horizontal">
            <TextBox MinWidth="120" Name="BoxType"/>
            <Label Content="Type"/>
        </StackPanel>
        
        <StackPanel Margin="5" Orientation="Horizontal">
            <TextBox MinWidth="120" Name="BoxDescription"/>
            <Label Content="Description"/>
        </StackPanel>
        
        <StackPanel Margin="5" Orientation="Horizontal">
            <TextBox MinWidth="120" Name="BoxSize"/>
            <Label Content="Size"/>
        </StackPanel>
        
        <StackPanel Margin="5" Orientation="Horizontal">
            <TextBox MinWidth="120" Name="BoxPrise"/>
            <Label Content="Prise"/>
        </StackPanel>
        
        <StackPanel Margin="5" Orientation="Horizontal">
            <TextBox MinWidth="120" Name="BoxDiscount"/>
            <Label Content="Discount"/>
        </StackPanel>
        
        <StackPanel Margin="5" Orientation="Horizontal">
            <CheckBox Content="IsAvailable" MinWidth="120" Name="BoxIsAvailable"/>
        </StackPanel>
        <StackPanel Margin="5" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Margin="5 0 5 0" Content="Добавить" Click="Button_Save_Click"/>
            <Button Margin="5 0 5 0" Content="отмена" Click="Button_Close_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
